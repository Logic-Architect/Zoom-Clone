<body>
    <div class="index">
        <div id="create-room-form">
            <form action="/<%=roomId%>" autocomplete="off" id="abcd">

                <input type="text" name="username" id="usrname" placeholder="Enter you User Name" autocomplete='false' required="true">

            </form>
            <button type="submit" for="abcd" class="create menu submit-create">
                <span>
                    Create Room
                </span>
            </button>
            <div class="menu roomid">
                <span>
                    Room ID
                </span>
            </div>
        </div>
        <div id="join-room-form">
            
                <input type="text" name="roomid" id="roomid" placeholder="Enter Room Id" autocomplete='false' required>
                <br>
                <input type="text" name="usrname" id="usrname2" placeholder="Enter you User Name" autocomplete='false' required="true">

            <button type="submit"  class="join menu submit-join">
                <span>
                    Join Room
                </span>
            </button>
        </div>
        <div class="create menu">
            <span>
                Create Room
            </span>
        </div>
        <div class="menu join">
            <span>
                Join Room via Room Id
            </span>
        </div>
    </div>

    <script>
        const roomId = "<%= roomId%>"
    </script>
